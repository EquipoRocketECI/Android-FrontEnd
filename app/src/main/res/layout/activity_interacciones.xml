<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.interacciones.Interacciones">


    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabInteracciones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/design_default_color_primary">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabComentarios"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/COMENTARIOS"
            android:icon="@drawable/ic_menu_camera"
            />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabDonaciones"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/DONACIONES"
            android:icon="@drawable/ic_menu_camera"
            />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabInversiones"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/INVERSIONES"
            android:icon="@drawable/ic_menu_camera"
            />
    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPagerInteracciones"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </androidx.viewpager.widget.ViewPager>
</LinearLayout>