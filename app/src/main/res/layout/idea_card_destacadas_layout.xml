<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/idea_card_viewDestacada"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/idea_card_titleDestacada"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner"
                android:fontFamily="sans-serif-medium"
                android:text="t"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/idea_card_imageDestacada"
                android:layout_width="fill_parent"
                android:layout_height="227dp"
                android:contentDescription="@string/idea_img_description" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16sp"
                android:layout_marginLeft="16sp"
                android:layout_marginEnd="16sp"
                android:layout_marginRight="16sp"
                android:text="DescripciÃ³n:" />

            <TextView
                android:id="@+id/idea_card_descriptionDestacada"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16sp"
                android:layout_marginLeft="16sp"
                android:layout_marginEnd="16sp"
                android:layout_marginRight="16sp"
                android:layout_marginBottom="7sp"
                android:justificationMode="inter_word"
                android:text="descripcion"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/idea_card_categoriaDestacada"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16sp"
                android:layout_marginLeft="16sp"
                android:layout_marginEnd="16sp"
                android:layout_marginRight="16sp"
                android:gravity="right"
                android:text="moda"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/idea_card_calificacionDestacada"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16sp"
                android:layout_marginLeft="16sp"
                android:layout_marginEnd="16sp"
                android:layout_marginRight="16sp"
                android:gravity="right"
                android:text="4"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/idea_card_faseDestacada"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginStart="16sp"
                android:layout_marginLeft="16sp"
                android:layout_marginEnd="16sp"
                android:layout_marginRight="16sp"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/idea_card_propietarioDestacada"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16sp"
                android:layout_marginLeft="16sp"
                android:layout_marginEnd="16sp"
                android:layout_marginRight="16sp"
                android:text="pro"
                android:textColor="#000000" />

            <Button
                android:id="@+id/idea_card_buttonDestacada"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="40sp"
                android:layout_marginLeft="40sp"
                android:layout_marginEnd="40sp"
                android:layout_marginRight="40sp"
                android:text="@string/ver_mas_text"
                app:backgroundTint="#3F51B5" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>