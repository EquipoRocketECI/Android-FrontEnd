<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/idea_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/idea_card_image"
                android:layout_width="fill_parent"
                android:layout_height="200dp"
                android:contentDescription="@string/idea_img_description"
                />

            <TextView
                android:id="@+id/idea_card_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed-medium"/>

            <TextView
                android:id="@+id/idea_card_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/idea_card_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ver_mas_text" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>